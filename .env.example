# Database Configuration (ZORUNLU)
POSTGRES_DB=firmaziyaret
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-strong-password

# Backend Configuration (ZORUNLU)
NODE_ENV=production
# JWT_SECRET: Minimum 32 karakter, önerilen: 64+ karakter
# Güvenli oluşturma için: .\scripts\generate-jwt-secret.ps1 (Windows) veya ./scripts/generate-jwt-secret.sh (Linux/Mac)
JWT_SECRET=change-me-to-very-long-random-string-min-32-chars
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}
PORT=3000

# Frontend Configuration (Production için ZORUNLU)
# Production domain URL'i - Frontend'in erişilebilir olduğu tam URL
# Örnek: https://example.com veya https://www.example.com
FRONTEND_URL=https://yourdomain.com
# VEYA birden fazla origin için (virgülle ayrılmış):
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Admin Seed (İlk kurulum için ZORUNLU, sonra OPSIYONEL)
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_PASSWORD=change-me-strong-password
SEED_ADMIN_NAME=Admin

# pgAdmin (Opsiyonel - sadece development/staging)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=change-me

# Business Configuration (Opsiyonel)
BUSINESS_TZ=Europe/Istanbul

# Development Only (Opsiyonel - NODE_ENV=development iken)
# ALLOWED_ORIGINS=http://localhost:5173
